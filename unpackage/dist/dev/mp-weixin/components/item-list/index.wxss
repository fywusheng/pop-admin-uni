.load-tips .dots .mask {
  position: absolute;
  right: 0;
  top: 0;
  z-index: 20;
  background-color: #eee;
  width: 100%;
  height: 100%;
  -webkit-animation: dotsAni 1.5s ease-out infinite forwards;
          animation: dotsAni 1.5s ease-out infinite forwards;
}
@-webkit-keyframes dotsAni {
0% {
    width: 100%;
}
70% {
    width: 0;
}
100% {
    width: 0;
}
}
